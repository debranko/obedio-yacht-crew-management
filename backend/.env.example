# Obedio Yacht Crew Management System - Environment Configuration
# Copy this file to .env and update with your actual values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://obedio_user:secure_password@localhost:5432/obedio_yacht_crew?schema=public"

# For development with SQLite (quick start):
# DATABASE_URL="file:./dev.db"

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://localhost:5173

# ===== AUTHENTICATION =====
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# ===== SECURITY =====
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===== FILE UPLOADS =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIRECTORY=./uploads

# ===== ESP32 SMART BUTTON INTEGRATION =====
ESP32_API_ENDPOINT=http://192.168.1.100/api
ESP32_AUTH_TOKEN=your-esp32-device-token
BUTTON_PRESS_TIMEOUT=5000
VOICE_RECORDING_MAX_DURATION=30

# ===== REAL-TIME COMMUNICATION =====
SOCKET_IO_CORS_ORIGIN=http://localhost:5173,http://localhost:3000
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=./logs/obedio.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===== EXTERNAL INTEGRATIONS =====
# Google Speech-to-Text (for voice message transcription)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@yacht.com
SMTP_PASSWORD=your-app-password

# ===== BACKUP & MAINTENANCE =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# ===== WINDOWS SERVER SPECIFIC =====
WINDOWS_SERVICE_NAME=ObedioYachtCrew
WINDOWS_SERVICE_DESCRIPTION=Obedio Yacht Crew Management System Backend
AUTO_START_ON_BOOT=true

# ===== PERFORMANCE =====
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# ===== DEVELOPMENT =====
ENABLE_API_DOCS=true
ENABLE_PRISMA_STUDIO=true
ENABLE_DEBUG_LOGS=true