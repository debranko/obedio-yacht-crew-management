<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backups -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="database" path="obedio.db"/>
    </cloud-backup>

    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="secure_prefs.xml"/>
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
    </device-transfer>
</data-extraction-rules>
